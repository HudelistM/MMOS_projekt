<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50, *">
            <Label class="action-bar-title" text="Popis letova" colSpan="2"/>
            <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
        </GridLayout>
    </ActionBar>

    <StackLayout class="p-20">
        <Label textWrap="true" >
            <Label.formattedText>
                <FormattedString>
                    <FormattedString.spans>
                        <Span text="Popis letova na lokacijama: &#xa;" />
                        <Span text="&#xa;Zagreb:&#xa;https://www.zagreb-airport.hr/putnici/informacije-o-letovima/10  &#xa;"/>
                        <Span text="&#xa;Dubrovnik:&#xa;https://www.airport-dubrovnik.hr/red-letenja-s19  &#xa;"/>
                        <Span text="&#xa;Rijeka:&#xa;http://rijeka-airport.hr/en/flights &#xa;"/>
                    </FormattedString.spans>
                </FormattedString>
            </Label.formattedText>
        </Label>
    </StackLayout>
</Page>