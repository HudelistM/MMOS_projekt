<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50, *">
            <Label class="action-bar-title" text="Aerodromi" colSpan="2"/>
            <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
        </GridLayout>
    </ActionBar>

    <StackLayout class="p-20">
        <Label textWrap="true" >
            <Label.formattedText>
                <FormattedString>
                    <FormattedString.spans>
                        <Span text="Zračna luka Franje Tuđmana: &#xa;" />
                        <Span text="&#xa;Zagreb"/>
                    </FormattedString.spans>
                </FormattedString>
            </Label.formattedText>
        </Label>

    <Image src="~/images/zagreb.jpg" stretch="aspectFit"></Image>


    <Label textWrap="true" >
            <Label.formattedText>
                <FormattedString>
                    <FormattedString.spans>
                        <Span text="Zračna luka Čilipi: &#xa;" />
                        <Span text="&#xa;Dubrovnik"/>
                    </FormattedString.spans>
                </FormattedString>
            </Label.formattedText>
        </Label>

    <Image src="~/images/dubrovnik.jpg" stretch="aspectFit"></Image>
    
    <Label textWrap="true" >
            <Label.formattedText>
                <FormattedString>
                    <FormattedString.spans>
                        <Span text="Zračna luka Rijeka: &#xa;" />
                        <Span text="&#xa;Rijeka"/>
                    </FormattedString.spans>
                </FormattedString>
            </Label.formattedText>
        </Label>

    <Image src="~/images/rijeka.jpg" stretch="aspectFit"></Image>
    

    </StackLayout>

</Page>